{
  "compilerOptions": {
    "target": "ES2019",
    "lib": ["ES2019"],
    "module": "commonjs",
    "esModuleInterop": true,
    "listFiles": false,

    "removeComments": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "resolveJsonModule": true,

    // strict
    "strict": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
  },
  "compileOnSave": true,
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/node_modules/*", "resources"]
}