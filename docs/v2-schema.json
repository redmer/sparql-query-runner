{
  "$id": "https://rdmr.eu/sparql-query-runner/v2-schema.json",
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "sparql-query-runner Configuration Schema v4",
  "type": "object",
  "required": ["version", "pipelines"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^v4(\\.\\d)?$",
      "description": "Version of the sparql-query-runner configuration"
    },
    "pipelines": { "$ref": "#/$defs/IPipeline1N" },
    "$schema": {
      "anyOf": [
        {
          "type": "string",
          "const": "https://rdmr.eu/sparql-query-runner/v2-schema.json"
        },
        {
          "type": "object"
        }
      ]
    }
  },
  "$defs": {
    "IUpdatePipeline": {
      "type": "object",
      "title": "A pipeline, performing a sequence of SPARQL update steps",
      "properties": {
        "type": { "const": "direct-update" },
        "endpoint": {
          "oneOf": [{ "$ref": "#/$defs/IEndpoint" }, { "$ref": "#/$defs/IEndpointDirect" }]
        },
        "steps": { "$ref": "#/$defs/IUpdateStep1N" }
      },
      "allOf": [{ "$ref": "#/$defs/IBasePipeline" }]
    },
    "IConstructPipeline": {
      "type": "object",
      "title": "A pipeline, performing a sequence of SPARQL CONSTRUCT-query steps",
      "properties": {
        "type": { "const": "construct-quads" },
        "sources": { "$ref": "#/$defs/ISource1N" },
        "destinations": { "$ref": "#/$defs/IDest1N" },
        "steps": { "$ref": "#/$defs/IConstructStep1N" }
      },
      "allOf": [{ "$ref": "#/$defs/IBasePipeline" }]
    },
    "IBasePipeline": {
      "type": "object",
      "properties": {
        "type": { "title": "Pipeline subtype", "type": "string" },
        "name": { "title": "Reference name of the pipeline", "type": "string" },
        "independent": {
          "title": "Pipeline does not depend on preceding pipeline",
          "type": "boolean",
          "default": false
        },
        "prefixes": { "$ref": "#/$defs/Prefixes" }
      }
    },
    "IPipeline1N": {
      "oneOf": [
        { "$ref": "#/$defs/IConstructPipeline" },
        { "$ref": "#/$defs/IUpdatePipeline" },
        {
          "type": "array",
          "items": {
            "oneOf": [
              { "$ref": "#/$defs/IConstructPipeline" },
              { "$ref": "#/$defs/IUpdatePipeline" }
            ]
          }
        }
      ]
    },

    "IEndpoint": {
      "type": "object",
      "properties": {
        "post": {
          "type": "string",
          "format": "iri-reference",
          "title": "SPARQL endpoint (POST)"
        },
        "auth": { "$ref": "#/$defs/IAuth" }
      },
      "required": ["post"]
    },
    "IEndpointDirect": {
      "$ref": "#/$defs/IEndpoint/properties/post"
    },

    "ISourceOrDest": {
      "type": "object",
      "properties": {
        "url": { "$ref": "#/$defs/URL" },
        "onlyGraphs": { "$ref": "#/$defs/URL1N" },
        "auth": { "$ref": "#/$defs/IAuth" },
        "type": {
          "type": "string",
          "default": "auto"
        }
      },
      "allowOtherProperties": false
    },
    "ISource": {
      "title": "Source of RDF data",
      "properties": {
        "type": { "enum": ["local-file", "msaccess", "sparql", "auto"] }
      },
      "allOf": [{ "$ref": "#/$defs/ISourceOrDest" }]
    },
    "IDest": {
      "title": "Export destination for RDF data",
      "properties": {
        "type": {
          "enum": ["file", "sparql", "auto", "sparql-graph-store", "sparql-quad-store", "laces"]
        }
      },
      "allOf": [{ "$ref": "#/$defs/ISourceOrDest" }]
    },

    "ISourceDirect": {
      "$ref": "#/$defs/ISourceOrDest/properties/url"
    },
    "ISource1N": {
      "anyOf": [
        { "$ref": "#/$defs/ISource" },
        { "$ref": "#/$defs/ISourceDirect" },
        {
          "type": "array",
          "items": { "anyOf": [{ "$ref": "#/$defs/ISource" }, { "$ref": "#/$defs/ISourceDirect" }] }
        }
      ]
    },
    "IDestDirect": {
      "$ref": "#/$defs/ISourceOrDest/properties/url"
    },
    "IDest1N": {
      "anyOf": [
        { "$ref": "#/$defs/IDest" },
        { "$ref": "#/$defs/IDestDirect" },
        {
          "type": "array",
          "items": { "anyOf": [{ "$ref": "#/$defs/IDest" }, { "$ref": "#/$defs/IDestDirect" }] }
        }
      ]
    },

    "URL": {
      "type": "string",
      "format": "iri-reference",
      "description": "A http(s):// remote URL or local path (without file://)"
    },
    "URL1N": {
      "anyOf": [
        { "$ref": "#/$defs/URL" },
        {
          "type": "array",
          "items": { "$ref": "#/$defs/URL" }
        }
      ]
    },

    "IAuthBasic": {
      "type": "object",
      "properties": {
        "type": { "const": "Basic", "description": "HTTP basic authentication" },
        "user_env": {
          "type": "string",
          "description": "Environment variable name for the username"
        },
        "password_env": {
          "type": "string",
          "description": "Environment variable name for the password"
        }
      },
      "allOf": [{ "$ref": "#/$defs/IBaseAuth" }]
    },
    "IAuthBearer": {
      "type": "object",
      "properties": {
        "type": { "const": "Bearer", "description": "Bearer token authentication" },
        "token_env": {
          "type": "string",
          "description": "Environment variable name for the token"
        }
      },

      "allOf": [{ "$ref": "#/$defs/IBaseAuth" }]
    },
    "IBaseAuth": {
      "description": "Method of authentication",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "description": "Authentication type"
        }
      }
    },
    "IAuth": {
      "oneOf": [{ "$ref": "#/$defs/IAuthBasic" }, { "$ref": "#/$defs/IAuthBearer" }]
    },

    "Prefixes": {
      "description": "Prefixes used in the SPARQL queries and CONSTRUCT result files",
      "type": "object",
      "patternProperties": {
        ".*": {
          "description": "prefix: namespace",
          "type": "string",
          "format": "iri-reference"
        }
      }
    },

    "IBaseStep": {
      "type": "object",
      "title": "Transformation step in the pipeline",
      "properties": {
        "type": { "type": "string" },
        "url": { "$ref": "#/$defs/URL1N" }
      }
    },
    "IStepDirect": {
      "$ref": "#/$defs/IBaseStep/properties/url"
    },

    "IValidateStep": {
      "type": "object",
      "properties": {
        "type": { "enum": ["shacl-validate"] }
      },
      "allOf": [{ "$ref": "#/$defs/IBaseStep" }]
    },
    "IUpdateStep": {
      "type": "object",
      "properties": {
        "type": { "enum": ["sparql-update"] }
      },
      "allOf": [{ "$ref": "#/$defs/IBaseStep" }]
    },
    "IConstructStep": {
      "type": "object",
      "properties": {
        "type": { "enum": ["sparql-construct"] },
        "intoGraph": {
          "title": "Adds a graph to constructed triples.",
          "description": "Empty: default graph. SPARQL 1.1 does not allow `GRAPH ?g { ... }` in CONSTRUCT queries.",
          "$ref": "#/$defs/URL"
        },
        "targetClass": {
          "type": "string",
          "title": "sh:targetClass for a constructed sh:SPARQLRule",
          "description": "Use a variable $this to select instances of the class $class."
        }
      },
      "allOf": [{ "$ref": "#/$defs/IBaseStep" }]
    },

    "IConstructStep1N": {
      "type": "array",
      "items": {
        "oneOf": [
          { "$ref": "#/$defs/IConstructStep" },
          { "$ref": "#/$defs/IStepDirect" },
          { "$ref": "#/$defs/IValidateStep" }
        ]
      }
    },
    "IUpdateStep1N": {
      "type": "array",
      "items": {
        "oneOf": [{ "$ref": "#/$defs/IUpdateStep" }, { "$ref": "#/$defs/IStepDirect" }]
      }
    }
  }
}
