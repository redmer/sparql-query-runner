  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch CLI",
      "skipFiles": ["<node_internals>/**", "${workspaceFolder}/node_modules/**/*.js"],
      "program": "${workspaceFolder}/dist/cli/cli.js",
      "args": ["run", "-i", "workflow.sqr.yaml"],
